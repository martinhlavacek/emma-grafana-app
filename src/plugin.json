{
  "type": "app",
  "name": "EMMA",
  "id": "emma-grafana-app",

  "routes": [
  ],

  "info": {
    "description": "Application shows data collected and analyzed by EMMA.",
    "author": {
      "name": "DATERA s.r.o.",
      "url": "https://emma.datera.cz/"
    },
    "keywords": ["EMMA", "NLP", "Analytics"],
    "logos": {
      "small": "img/emma-logo.svg",
      "large": "img/emma-logo.svg"
    },
    "links": [
      {"name": "Website", "url": "https://emma.datera.cz/"},
      {"name": "GitHub", "url": "https://github.com/dateracz/emma-grafana-app"},
      {"name": "License", "url": "https://github.com/dateracz/emma-grafana-app/blob/master/LICENSE"}
    ],
    "screenshots": [
      {"name": "Panels", "path": "img/sensu-panels.png"}
    ],
    "version": "1.0.0",
    "updated": "2019-03-18"
  },

  "includes": [
    { "type": "page", "name": "Sensu Servers", "component": "SensuServersCtrl", "role": "Viewer", "addToNav": true, "defaultNav": true},
    { "type": "page", "name": "Sensu Server Info", "component": "SensuServerInfoCtrl", "role": "Viewer", "addToNav": false, "defaultNav": false},
    {
      "type": "dashboard",
      "name": "Emma Summary",
      "path": "dashboards/emma-summary.json",
      "addToNav": true
    },
    {
      "type": "datasource",
      "name": "Emma Core"
    }
  ],

  "dependencies": {
    "grafanaVersion": "5.0+",
    "plugins": [
      {
        "type": "panel",
	      "name": "Pie Chart",
        "id": "grafana-piechart-panel",
	      "version": "^1.3.4"
      },
      {
       "type": "panel",
       "name": "Datatable Panel",
       "id": "briangann-datatable-panel",
       "version": "^0.0.6"
      }
    ]
  }
}
